<div class="sidebar">
    <div class="sidebar-header">
        <h4 class="mb-0">
            <i class="bi bi-bicycle me-2"></i>
            Fiets CMS
        </h4>
    </div>
    
    <nav class="sidebar-nav">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link <%= title === 'Dashboard' ? 'active' : '' %>" href="/admin">
                    <i class="bi bi-speedometer2 me-2"></i>
                    Dashboard
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link <%= title.includes('Product') ? 'active' : '' %>" href="/admin/products">
                    <i class="bi bi-box-seam me-2"></i>
                    Producten
                    <span class="badge bg-primary ms-auto" id="products-count">0</span>
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link <%= title.includes('Bestelling') || title.includes('Order') ? 'active' : '' %>" href="/admin/orders">
                    <i class="bi bi-cart-check me-2"></i>
                    Bestellingen
                    <span class="badge bg-success ms-auto" id="orders-count">0</span>
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link <%= title.includes('Klant') || title.includes('Customer') ? 'active' : '' %>" href="/admin/customers">
                    <i class="bi bi-people me-2"></i>
                    Klanten
                    <span class="badge bg-info ms-auto" id="customers-count">0</span>
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link <%= title.includes('Pagina') || title.includes('Page') ? 'active' : '' %>" href="/admin/pages">
                    <i class="bi bi-file-text me-2"></i>
                    Pagina's
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link <%= title.includes('Analytics') ? 'active' : '' %>" href="/admin/analytics">
                    <i class="bi bi-graph-up me-2"></i>
                    Analytics
                </a>
            </li>
            
            <li class="nav-item mt-3">
                <h6 class="nav-header">Systeem</h6>
            </li>
            
            <li class="nav-item">
                <a class="nav-link <%= title.includes('Instellingen') || title.includes('Settings') ? 'active' : '' %>" href="/admin/settings">
                    <i class="bi bi-gear me-2"></i>
                    Instellingen
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" href="/shop" target="_blank">
                    <i class="bi bi-shop me-2"></i>
                    Webshop bekijken
                    <i class="bi bi-box-arrow-up-right ms-auto"></i>
                </a>
            </li>
        </ul>
    </nav>
    
    <div class="sidebar-footer">
        <div class="user-info">
            <div class="d-flex align-items-center">
                <div class="avatar">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div class="user-details ms-2">
                    <div class="username"><%= user.username %></div>
                    <small class="text-muted">Administrator</small>
                </div>
            </div>
            <div class="user-actions mt-2">
                <a href="/change-password" class="btn btn-sm btn-outline-light me-2" title="Wachtwoord wijzigen">
                    <i class="bi bi-key"></i>
                </a>
                <form method="POST" action="/logout" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-light" title="Uitloggen">
                        <i class="bi bi-box-arrow-right"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
