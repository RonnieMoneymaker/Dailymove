<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="<%= siteSettings.site_description || 'De beste fietsen voor elke gelegenheid' %>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/shop.css" rel="stylesheet">
</head>
<body>
    <!-- Header -->
    <%- include('partials/header') %>
    
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center min-vh-75">
                <div class="col-lg-6">
                    <h1 class="hero-title">
                        Welkom bij <strong><%= siteSettings.site_name || 'Fiets Webshop' %></strong>
                    </h1>
                    <p class="hero-subtitle">
                        <%= siteSettings.site_description || 'De beste fietsen voor elke gelegenheid. Van stadsfietsen tot mountainbikes, wij hebben alles wat je nodig hebt.' %>
                    </p>
                    <div class="hero-actions">
                        <a href="/shop/products" class="btn btn-primary btn-lg">
                            <i class="bi bi-bicycle me-2"></i>
                            Bekijk Fietsen
                        </a>
                        <a href="/shop/category/elektrische-fietsen" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-lightning me-2"></i>
                            E-bikes
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=600&h=400&fit=crop&crop=center" 
                             alt="Fietsen" class="img-fluid rounded-3 shadow">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <% if (categories.length > 0) { %>
    <section class="categories-section py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Shop per Categorie</h2>
                <p class="section-subtitle">Vind precies wat je zoekt</p>
            </div>
            
            <div class="row g-4">
                <% categories.slice(0, 6).forEach(category => { %>
                <div class="col-lg-4 col-md-6">
                    <a href="/shop/category/<%= category.slug %>" class="category-card">
                        <div class="category-icon">
                            <i class="bi bi-<%= category.slug.includes('elektrisch') ? 'lightning' : category.slug.includes('mountain') ? 'triangle' : category.slug.includes('race') ? 'speedometer2' : category.slug.includes('stad') ? 'building' : category.slug.includes('onderdelen') ? 'gear' : 'bicycle' %>"></i>
                        </div>
                        <h5 class="category-name"><%= category.name %></h5>
                        <p class="category-count"><%= category.product_count %> producten</p>
                    </a>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Featured Products -->
    <% if (featuredProducts.length > 0) { %>
    <section class="featured-section py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Uitgelichte Producten</h2>
                <p class="section-subtitle">Onze toppers van dit moment</p>
            </div>
            
            <div class="row g-4">
                <% featuredProducts.slice(0, 4).forEach(product => { %>
                <div class="col-lg-3 col-md-6">
                    <%- include('partials/product-card', { product: product }) %>
                </div>
                <% }) %>
            </div>
            
            <div class="text-center mt-5">
                <a href="/shop/products" class="btn btn-outline-primary">
                    Alle Producten Bekijken
                    <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Latest Products -->
    <% if (latestProducts.length > 0) { %>
    <section class="latest-section py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="section-title">Nieuwste Producten</h2>
                <p class="section-subtitle">Pas binnen gekomen</p>
            </div>
            
            <div class="row g-4">
                <% latestProducts.slice(0, 4).forEach(product => { %>
                <div class="col-lg-3 col-md-6">
                    <%- include('partials/product-card', { product: product }) %>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Features Section -->
    <section class="features-section py-5 bg-primary text-white">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h5>Gratis Verzending</h5>
                    <p class="mb-0">Vanaf â‚¬<%= siteSettings.free_shipping_threshold || '50' %></p>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h5>2 Jaar Garantie</h5>
                    <p class="mb-0">Op alle fietsen</p>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-tools"></i>
                    </div>
                    <h5>Gratis Montage</h5>
                    <p class="mb-0">Professioneel gemonteerd</p>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h5>Klantenservice</h5>
                    <p class="mb-0">Ma-Za 9:00-18:00</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/shop.js"></script>
</body>
</html>
